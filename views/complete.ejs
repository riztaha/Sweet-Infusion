  <body>
    <nav>
      <div class="nav_orders wrapper">
        <a href="/"><img class="logo" src="images/logo.png" alt="logo image"></a>
      </div>
    </nav>
    <!-- main content here -->
    <main>
      <div class="story order_note">
        <!-- Need to loop through the array 'cart', and print out each item's name/quantity of the item they ordered -->

        <h1>Your Order Details</h1>
        <div>
            <p>Thank you <%= customer.name %>!</p>
            <p>This is your order:
               <% for(let i = 0; i < cart.length; i ++) { %>
              <span><%= cart[i].name %> with quantity <%= cart[i].quantity %>, </span>
              <% } %>
              Thank you and enjoy!</p>
            <p>Your order should be ready for pickup in approximately <%= maxPrepTime %> minutes.</p>
            <p>You will receive a text message once your order is complete.</p>

        </div>
      </div>
    </main>
    <!-- main content ends here -->
  </body>
